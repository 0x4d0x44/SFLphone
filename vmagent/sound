//
// GET A VOICEMAIL'S SOUND FILES
//
// Exemple of use :
// http://default-6666:735@127.0.0.1/uml/index/sound?f=INBOX&v=msg0000
//

$arr = explode("/", substr($_SERVER['PATH_INFO'], 1));
$folder    = $arr[0];
$voicemail = $arr[1];

$arr = $agent->getSound($folder, $voicemail);

