%define name sflphone
%define version 0.4.1
%define release 5
%define prefix /usr
Autoreq: 0

Name:		%name
Summary:	An other VoIP client
Version:	%version
Release:	%release
License:	GPL
Group:		Networking/Utilities
URL:		http://www.sflphone.org
Packager:	Cyrille BÃ©raud <cyrille.beraud@savoirfairelinux.com>
Source:		http://www.sflphone.org/sflphone-0.4.1.tar.gz
BuildRoot:	/tmp/sflphone-%{version}-%{release}

%description
SFLPhone is a VoIP client for a X11 environment.
%prep
%setup
CXXFLAGS="$RPM_OPT_FLAGS" ./configure -prefix %{prefix}

%build
make

%install
make DESTDIR=$RPM_BUILD_ROOT install

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-, root, root)
%{prefix}/bin/sflphoned
%dir %{prefix}/share/sflphone/ringtones
%{prefix}/share/sflphone/ringtones/*

