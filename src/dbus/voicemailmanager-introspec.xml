<?xml version="1.0" ?>
<node name="/org/sflphone/SFLphone">
  <interface name="org.sflphone.SFLphone.VoicemailManager">
  
    <method name="getListFolders">
      <arg type="as" name="list" direction="out"/>
    </method>
    
    <method name="getFolderCount">
      <arg type="s" name="folder" direction="in"/>
      <arg type="i" name="count" direction="out"/>
    </method>
    
    <method name="getListMails">
      <arg type="s" name="folder" direction="in"/>
      <arg type="as" name="list" direction="out"/>
    </method>
    
    <method name="getVoicemailInfo">
      <arg type="s" name="folder" direction="in"/>
      <arg type="s" name="name" direction="in"/>
      <arg type="s" name="list" direction="out"/>
    </method>
    
    <method name="getListErrors">
      <arg type="as" name="list" direction="out"/>
    </method>
    
    <!--
     * GUI => sfkphoned
     * Asks to play a voicemail
    -->
    <method name="playVoicemail">
      <arg type="s" name="folderName" direction="in"/>
      <arg type="s" name="voicemailName" direction="in"/>
    </method>
    
    <!--
     * sflphoned => GUI
     * Indicates that the voicemail is now playing
    -->
    <signal name="voicemailPlaying"/>
    
    <!--
     * GUI => sflphoned
     * Asks to stop listening to the current voicemail
    -->
    <method name="stopVoicemail"/>
    
    <!--
     * sflphoned => GUI
     * Indicates that the voicemail is now stopped
    -->
    <signal name="voicemailStopped"/>
    
    <!--
     * sflphoned => GUI
     * Throws error(s) sflphoned or agent have found
    -->
    <signal name="throwError">
      <arg type="s" name="error"/>
    </signal>
    
    
    <!-- VOICEMAIL CONFIGURATION -->
    <method name="isVoicemailServerEnabled">
      <arg type="b" name="enabled" direction="out"/>
    </method>
    
	<method name="voicemailServerEnable"/>
    
    <method name="getVoicemailConfigAddress">
      <arg type="s" name="address" direction="out"/>
    </method>

    <method name="setVoicemailConfigAddress">
      <arg type="s" name="address" direction="in"/>
    </method>
    
    <method name="getVoicemailConfigPath">
      <arg type="s" name="path" direction="out"/>
    </method>

    <method name="setVoicemailConfigPath">
      <arg type="s" name="path" direction="in"/>
    </method>
    
    <method name="getVoicemailConfigPort">
      <arg type="i" name="port" direction="out"/>
    </method>

    <method name="setVoicemailConfigPort">
      <arg type="i" name="port" direction="in"/>
    </method>
    	
    <method name="isVoicemailConfigHttpsEnabled">
      <arg type="b" name="enabled" direction="out"/>
    </method>

    <method name="voicemailConfigHttpsEnable">
      <arg type="b" name="enabled" direction="in"/>
    </method>
    
  </interface>
</node>
 
