<?xml version="1.0" ?>
<node name="/org/sflphone/SFLphone">
  <interface name="org.sflphone.SFLphone.VoicemailManager">
  
    <method name="getListFolders">
      <arg type="as" name="list" direction="out"/>
    </method>
    
    <method name="getFolderCount">
      <arg type="s" name="folder" direction="in"/>
      <arg type="i" name="count" direction="out"/>
    </method>
    
    <method name="getListMails">
      <arg type="s" name="folder" direction="in"/>
      <arg type="as" name="list" direction="out"/>
    </method>
    
    <method name="getVoicemailInfo">
      <arg type="s" name="folder" direction="in"/>
      <arg type="s" name="name" direction="in"/>
      <arg type="s" name="list" direction="out"/>
    </method>
    
    <method name="getListErrors">
      <arg type="as" name="list" direction="out"/>
    </method>
    
    <method name="playVoicemail">
      <arg type="s" name="folderName" direction="in"/>
      <arg type="s" name="voicemailName" direction="in"/>
    </method>
    
    <method name="stopVoicemail"/>
    
    <!-- VOICEMAIL CONFIGURATION -->
    <method name="getVoicemailConfigAddress">
      <arg type="s" name="address" direction="out"/>
    </method>
    
    <method name="getVoicemailConfigPath">
      <arg type="s" name="path" direction="out"/>
    </method>
    
    <method name="getVoicemailConfigPort">
      <arg type="i" name="port" direction="out"/>
    </method>
    
    <method name="isVoicemailConfigHttpsEnabled">
      <arg type="b" name="https" direction="out"/>
    </method>

  </interface>
</node>
 
